<UserControl x:Class="InputToolbox.Views.RemoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InputToolbox.Views"
             xmlns:inputToolbox="clr-namespace:InputToolbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance inputToolbox:RemoteViewModel}" Padding="5,0,3,0">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Height" Value="25" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Label Content="{Binding IP}" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
